# =============================================================================
# AgenticTestingCrew Environment Configuration Template
# =============================================================================
# 
# Instructions:
# 1. Copy this file to .env in the backend directory
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit the actual .env file to version control
# 
# =============================================================================

# Azure OpenAI Configuration
# Get these values from your Azure OpenAI service in the Azure Portal
AZURE_API_KEY=your_azure_openai_api_key_here
AZURE_API_BASE=https://your-azure-openai-resource.openai.azure.com
AZURE_API_VERSION=2024-12-01-preview
MODEL=gpt-4.1
AZURE_OPENAI_CHAT_DEPLOYMENT=your_gpt4_deployment_name

# OpenAI compatibility for CrewAI - using Azure credentials
# Use the same Azure values as above for CrewAI compatibility
OPENAI_API_KEY=your_azure_openai_api_key_here
OPENAI_API_BASE=https://your-azure-openai-resource.openai.azure.com/openai/deployments/your_gpt4_deployment_name
OPENAI_API_VERSION=2024-12-01-preview
OPENAI_API_TYPE=azure

# Application Server Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_WS_URL=ws://http://localhost:8000/ws/logs

# Testing Configuration
# Replace with your actual application URLs for testing
DEMO_SSO_LOGIN_URL=https://www.saucedemo.com/
TARGET_APPLICATION_URL=https://your-application-url.com/login
SAMPLE_ECOMMERCE_URL=https://automationexercise.com/
# Alternative test URLs (optional)
TEST_URL_DEMO=https://demo.testim.io/

# CrewAI Configuration
# Disable telemetry for privacy
CREWAI_DISABLE_TELEMETRY=true
# Disable all OpenTelemetry features
OTEL_SDK_DISABLED=true

# Enhanced CrewAI Configuration
# Set to true to enable enhanced trained model
CREWAI_ENHANCED_MODE=true
CREWAI_MODEL_VERSION=crewai-discovery-specialist-v1.0
CREWAI_TRAINING_DATE=2025-08-20

# Browser Configuration (optional)
BROWSER=msedge
PLAYWRIGHT_BROWSER=msedge
HEADLESS=false

# Logging Configuration (optional)
LOG_LEVEL=INFO
DEBUG_MODE=false

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/agentictesting
# REDIS_URL=redis://localhost:6379

# Security Configuration (optional)
# SECRET_KEY=your_secret_key_for_session_management
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance Configuration (optional)
MAX_WORKERS=4
TIMEOUT_SECONDS=30
MAX_RETRIES=3

# =============================================================================
# Development vs Production Settings
# =============================================================================
# 
# For Development:
# - Use localhost URLs
# - Enable verbose logging
# - Set HEADLESS=false for debugging
# 
# For Production:  
# - Use production URLs
# - Set LOG_LEVEL=WARNING
# - Set HEADLESS=true
# - Enable security features
# 
# =============================================================================
